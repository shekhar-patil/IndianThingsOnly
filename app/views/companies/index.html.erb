<center/>
<p id="notice"><%= notice %></p>
  <tbody>
    <% @companies.each do |company| %>
      <div class = "mainbox">
        <div class = "box0">
          <div><h3><%= company.name %></h3></div>
        </div>
        <hr>
        <div class="box1 justify-content-between">
          <div class="box1-1">
            <div class = "image" ><img ><%= image_tag(company.picture_url, width: 600) if company.picture.present? %></img></div>
          </div>
          <div class="box1-2">
            <div class="category">
              Category: <%= company.categories.present? ? company.categories.pluck(:name) : 'Not added yet' %>
            </div>
            <br/>
            <div class="box2">
              <%= company.discription %>
            </div>
            <br/>
            <div class="box3">
              <% if company.is_indian %>
                <h4 class="is-indian" style="color:green">This is Indian Company<h4>
              <% else %>
                <h4 class="is-indian" style="color:green">This not the Indian Company<h4>
              <% end %>
            </div>
          </div>
        </div>
        <hr>

      </div>
    <br>
    <% if current_user.present? %>
      <div>
        <div class="box1-3">
          <%= link_to 'Show', company %>
          <%= link_to 'Edit', edit_company_path(company) %>
          <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    <% end %>
  <% end %>

  <div class="row margin-twenty5-zero margin-b-zero pagination-row">
    <div class="col-lg-8 col-md-8 col-sm-7 col-xs-6 padding-zero">
      <ul class="pagination">
        <li class="disabled"> <%= will_paginate(@companies,:previous_label => "&laquo;", :next_label => "&raquo;",:class=>"small-font",:outer_window => 1,:inner_window => 0) %></li>
      </ul>
    </div>
  </div>

<div>
  <%= button_to "Suggest Indian Company", new_company_url, method: :get, class: 'btn btn-outline-success btn-lg' %>
</div>
